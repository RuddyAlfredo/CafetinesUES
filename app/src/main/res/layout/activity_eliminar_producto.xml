<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:paddingTop="30dip"
    android:stretchColumns="1"
    tools:context=".hc17018.Producto.EliminarProductoActivity">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_marginTop="30dp"
        android:textAlignment="center"
        android:text="@string/eliminarProductos"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textSize="9pt"
        android:textStyle="bold"></TextView>

    <TableRow android:layout_height="70dp">
        <TextView
            android:text="@string/local"
            android:gravity="center"
            android:layout_marginTop="10dp"/>

        <Spinner
            android:id="@+id/editIdLocalSpinner"
            android:minHeight="25dp"
            android:layout_marginTop="5dp"
            android:layout_width="fill_parent"
            android:layout_height="30dp" />
    </TableRow>

    <TableRow
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_height="70dp">
        <TextView
            android:text="@string/idProducto"
            android:gravity="center"
            android:layout_marginTop="10dp"/>

        <Spinner
            android:id="@+id/editIdProductosSpinner"
            android:minHeight="25dp"
            android:layout_marginTop="5dp"
            android:layout_width="fill_parent"
            android:layout_height="30dp" />
    </TableRow>

    <TableLayout>
        <TableRow
            android:gravity="center"
            android:layout_marginTop="20dp">
            <Button
                android:id="@+id/btnEliminar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/eliminar"
                android:onClick="eliminarProducto"
                android:layout_marginRight="10dp"/>
        </TableRow>
    </TableLayout>


</TableLayout>